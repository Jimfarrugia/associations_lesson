<h1>Add an Author</h1>

<%= form_tag("/authors/create", method: "post") do %>
  <p>
    <%= label_tag(:name, "Author's Name") %>
    <%= text_field_tag(:name) %>
    <br>
    <%= label_tag(:date_of_birth, "Date of Birth") %>
    <%= date_field(:author, :date_of_birth) %>
  </p>
  <p>
    <%= submit_tag("Add Author") %>
  </p>
<% end %>